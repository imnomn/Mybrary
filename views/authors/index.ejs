<div class="container">
   <h2>Search Author</h2>
   <div class="row mx-auto w-50  my-5">

      <form action="/authors" method="get" class="d-flex">
         <input class="form-control me-1" type="search" name="name" value="<%=searchOption%>" placeholder="Search" aria-label="Search">
         <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
   </div>
   <div class="row">
      <div class="col">

         <% Authors.forEach(author => { %>
            <p>
               <%=author.name%>
            </p>
            <div class="d-flex justify-content-start mb-4">
               <a class="btn btn-success me-3" href="/authors/<%=author.id %>/edit">edit</a>
               <a class="btn btn-info me-3" href="/authors/<%= author.id%>">show</a>
               <form method="post" action="/authors/<%=author.id%>?_method=DELETE">
                  <button class="btn btn-danger" type="submit">Delete</button>
               </form>
            </div>
            <%  }); %>



      </div>
   </div>
</div>