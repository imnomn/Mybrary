<div class="container">

   <h2>Edit
      <%= book.title %>
   </h2>

   <form action="/books/<%=book.id %>?_method=PUT" method="post">
      <div class="row">
         <div class="mb-3 col-12 col-md-5">
            <label for="Book" class="form-label">Title</label>
            <input type="text" class="form-control" name="title" id="book" value="<%= book.title %>">
         </div>

         <div class="mb-3 col-12 col-md-5 offset-md-2">
            <label for="author" class="form-label">Author Name</label>
            <select class="form-select " name="author">
         <% authors.forEach(author => {%>
            <% if(book.author == author.id) {%>
                <option value="<%=author.id%>" selected><%=author.name%></option>
                <% } else{%>
                <option value="<%=author.id%>" ><%=author.name%></option>
                <% }}) %>
             </select>
         </div>
      </div>
      <% const date = book.publishDate.toISOString().split("T")[0] %>
         <div class="row">
            <div class="mb-3 col-12 col-md-5">
               <label for="publishDate" class="form-label">Publish Date</label>
               <input type="date" value="<%= date %>" class="form-control" name="publishDate" id="book">
            </div>

            <div class="mb-3 col-12 col-md-5 offset-md-2">
               <label for="pageCount" class="form-label">Page Count</label>
               <input type="number" class="form-control" name="pageCount" value="<%= book.pageCount %>" id="book">
            </div>
         </div>


         <div class="row">
            <div class="mb-3 col-12 col-md-3">
               <div class="">
                  <label for="formFile" class="form-label">Cover Image</label><br>
                  <input width="100" height="150" type="file" class="filepond" name="cover" id="formFile">
               </div>
            </div>

            <div class="mb-3 col-12 col-md-5 offset-md-4 ">
               <div class="">
                  <label for="newBookTextArea " class="form-label ">Description </label>
                  <textarea class="form-control " name="description " id="newBookTextArea " rows="6 "><%=  book.description%></textarea>
               </div>
            </div>
         </div>


         <div class="d-flex justify-content-between ">
            <a href="/books/<%= book.id %>" class="btn btn-danger ">Cancel</a>
            <button type="submit " class="btn btn-primary ">Update</button>
         </div>
   </form>

</div>