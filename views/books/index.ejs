<div class="container">
   <h2>Search Book</h2>


   <form action="/books" method="get" class=" mx-auto w-50  my-5">
      <div class="row">
         <div class="col-12 col-md-12">
            <input class="form-control me-1" type="search" name="name" placeholder="Search" aria-label="Search">
         </div>

      </div>

      <div class="row mt-2">
         <div class="col-12 col-md-6">
            <label for="publishBefore" class="form-label">Publish Before</label>
            <input type="date" class="form-control" name="publishBefore" id="book">
         </div>

         <div class="col-12 col-md-6">
            <label for="publishAfter" class="form-label">Publish After</label>
            <input type="date" class="form-control" name="publishAfter" id="book">
         </div>

      </div>
      <div class="row mt-2">
         <div class="col-2 offset-10"> <button class="btn btn-outline-success" type="submit">Search</button>
         </div>

      </div>


   </form>

   <div class="row">
      <% books.forEach(book => { %>
         <div class="col-12 col-md-3 mb-3">
            <a href="/books/<%= book.id %>">
            <img height="250px" class="card-img-top" src="<%= book.coverImagePath %>">
         </a>

         </div>
         <% }); %>
   </div>
</div>